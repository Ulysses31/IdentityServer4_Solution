@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims;

@{
	var userInfoResponceClaims = ViewData["userInfoResponceClaims"] as IEnumerable<Claim>;
}

<h2>Claims from /connect/userinfo endpoint</h2>

@foreach (var claim in userInfoResponceClaims)
{
	<dt>@claim.Type</dt>
	<dd>@claim.Value</dd>
}

<hr />

<h2>Claims</h2>

<dl>
	@foreach (var claim in User.Claims)
	{
		<dt>@claim.Type</dt>
		<dd>@claim.Value</dd>
	}
</dl>

<h2>Properties</h2>

<dl>
	@foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
	{
		<dt>@prop.Key</dt>
		<dd>@prop.Value</dd>
	}
</dl>