@model IdentityServerClient.ViewModels.GalleryIndexViewModel

@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<hr />

<div class="bottomMarginDefault">
</div>

	<div class="row">
		@foreach (var item in Model.Images)
		{
			<div class="col-lg-4 col-sm-12 mb-5">
				<div>
					<img class="img-thumbnail"
							 src="@("https://localhost:44366/images/" + item.FileName)" />
				</div>
				<div>
					<div class="h5">@item.Title</div>
					<div class="bottomMarginDefault">
						<a asp-action="EditImage"
							 asp-controller="Gallery"
							 asp-route-id="@item.Id">Edit title</a> |
						<a asp-action="DeleteImage"
							 asp-controller="Gallery"
							 asp-route-id="@item.Id">Delete image</a>
					</div>
				</div>
			</div>
		}
	</div>
